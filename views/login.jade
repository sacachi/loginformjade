extends layout

block content
    block content
        .main.container
            .row
                .col-md-6.col-md-offset-3
                    h1.display-4.m-b-2 Login

                    // register form
                    form(method='POST' action='/register')
                        div.form-group
                            label(for='name') Name:
                            input#name.form-control(type='text', placeholder='Name' name='name')
                        div.form-group
                            label(for='pw') Password:
                            input#pw.form-control(type='password' name='password')
                        button.btn.btn-primary(type='submit') Sign up